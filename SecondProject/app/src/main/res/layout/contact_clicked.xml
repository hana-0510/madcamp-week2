<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parent_act"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_profile_c"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:padding="10dp"
        android:src="@drawable/img_df" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="3dp"
            android:text="TITLE"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/name_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:includeFontPadding="false"
            android:padding="3dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold"
            android:ems="10"
            android:inputType="textPersonName" />
        <ImageView
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:src="@android:drawable/ic_menu_edit" />
<!--        <ImageView-->
<!--            android:id="@+id/name_check"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:visibility="gone"-->
<!--            android:src="?android:attr/textCheckMark" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="3dp"
            android:text="content"
            android:textColor="@android:color/darker_gray"
            android:textSize="40sp" />
        <ImageView
            android:id="@+id/edit_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:src="@android:drawable/ic_menu_edit" />
        <EditText
            android:id="@+id/num_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:visibility="gone"
            android:padding="3dp"
            android:text="content"
            android:textColor="@android:color/darker_gray"
            android:textSize="40sp" />
<!--        <ImageView-->
<!--            android:id="@+id/num_check"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:visibility="gone"-->
<!--            android:src="?android:attr/textCheckMark" />-->
        </LinearLayout>
    <ImageView
        android:id="@+id/fix_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:clickable="false"
        android:src="?android:attr/textCheckMark" />
</LinearLayout>